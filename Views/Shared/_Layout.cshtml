<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <title>@ViewData["Title"] - inmobiliariaLopez</title>

  <!-- Bootstrap CSS (solo uno de los dos) -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <!-- Fuente Roboto -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

  <!-- Estilos personalizados -->
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/inmobiliariaLopez.styles.css" asp-append-version="true" />

  <!-- FontAwesome para iconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

  <!-- Estilos del Sidebar -->
  <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />

  <!-- Estilos Select2 -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
</head>

<body>
  <header>
    <!-- Top Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Inmobiliaria López</a>

        <!-- Mostrar correo del usuario logueado en el Top Bar -->
        @if (User.Identity.IsAuthenticated)
        {
          <span class="navbar-text">
            Bienvenido, <strong>@User.Identity.Name</strong> <!-- Mostrar correo aquí -->
          </span>
        }

        <!-- Si no está autenticado, mostrar botón de login -->
        @if (!User.Identity.IsAuthenticated)
        {
          <a class="btn btn-primary" href="/Usuarios/Login">Iniciar sesión</a>
        }
      </div>
    </nav>

    <!-- Sidebar Vertical -->
    <nav class="sidebar">
      <div class="d-flex flex-column align-items-center py-4">
        <h4 class="text-center mb-4">Menú</h4>
        <ul class="nav flex-column w-100">
          <li class="nav-item">
            <a class="nav-link text-white" href="/">
              <i class="fas fa-home me-2"></i> Inicio
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/Propietarios">
              <i class="fas fa-user-tie me-2"></i> Propietarios
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/Inquilinos">
              <i class="fas fa-users me-2"></i> Inquilinos
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/Inmuebles">
              <i class="fas fa-building me-2"></i> Inmuebles
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="/Contratos">
              <i class="fas fa-file-contract me-2"></i> Contratos
            </a>
          </li>
          <li class="nav-item"></li>
          <a class="nav-link text-white" href="/Pagos"><i class="fas fa-money-check-alt me-2"></i> Pagos</a>
          </li>
          <!-- Menú de Administración solo visible para Administradores -->
          <li class="nav-item">
            <a class="nav-link text-white" href="#adminMenu" data-bs-toggle="collapse" aria-expanded="false"
              aria-controls="adminMenu">
              <i class="fas fa-cogs me-2"></i> Administración
            </a>
            <div class="collapse" id="adminMenu">
              <ul class="nav flex-column ms-3">
                <li class="nav-item">
                  <a class="nav-link text-white" href="/Usuarios">
                    <i class="fas fa-users-cog me-2"></i> Usuarios
                  </a>
                </li>
                <!--<li class="nav-item">
                  <a class="nav-link text-white" href="/Configuraciones">
                    <i class="fas fa-cogs me-2"></i> Configuraciones
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-white" href="/Roles">
                    <i class="fas fa-shield-alt me-2"></i> Roles y Permisos
                  </a>
                </li> -->
                <!-- Mostrar botón de cerrar sesión si el usuario está autenticado -->

              </ul>
            </div>
          </li>
          @if (User.Identity.IsAuthenticated)
          {
            <form method="post" asp-controller="Usuarios" asp-action="Logout">
              <button type="submit" class="btn btn-danger">Cerrar sesión</button>
            </form>
          }
        </ul>
      </div>
    </nav>

    <!-- Contenido Principal -->
    <div class="main-content">
      <main role="main" class="pb-3">
        @RenderBody()
      </main>
    </div>
  </header>

  <!-- Footer -->
  <footer class="footer bg-light text-muted border-top">
    <div class="container-fluid d-flex justify-content-center align-items-center h-100">
      <div class="text-center">
        &copy; 2025 - inmobiliariaLopez | Prof. Mariano Luzza
      </div>
    </div>
  </footer>

  <!-- Scripts JS -->
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Scripts Select2 -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

  <!-- Cargar jQuery Validation y mensajes en español -->
  <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/localization/messages_es.min.js"></script>

  @await Html.PartialAsync("_ValidationScriptsPartial")

  <!-- Única invocación de RenderSectionAsync -->
  @await RenderSectionAsync("Scripts", required: false)

  <!-- Inicializar Select2 -->
  <script>
    $(document).ready(function () {
      // Aplica Select2 a todos los <select> de la página
      $('select').select2({
        placeholder: "Seleccione una opción",
        allowClear: true // Permite limpiar la selección
      });
    });
  </script>

</body>

</html>
