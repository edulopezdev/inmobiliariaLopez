@{
  Layout = null; // Esto asegura que este layout no tenga un layout principal.
}

<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <title>@ViewData["Title"] - inmobiliariaLopez</title>

  <!-- Bootstrap CSS (solo uno de los dos) -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <!-- Fuente Roboto -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

  <!-- Estilos personalizados -->
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

  <!-- FontAwesome para iconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

  <!-- Estilos para fondo y login -->
  <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>

<body>
 
    @RenderBody() <!-- Aquí se renderiza el contenido específico del Login -->

  <!-- Scripts JS -->
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

  @await Html.PartialAsync("_ValidationScriptsPartial")
  @RenderSection("Scripts", required: false)

</body>

</html>
