@{
  ViewData["Title"] = "Inicio";
  var userName = User.Identity?.Name ?? "usuario";
}

<div class="container-fluid position-relative bg-cover"
  style="background-image: url('/images/background.jpg'); background-size: cover; height: 100vh;">
  <!-- Div centrado con mensaje -->
  <div class="d-flex align-items-center justify-content-center position-absolute w-100 h-100">
    <div class="text-center text-black p-4 rounded shadow-lg dynamic-width animate-message"
      style="background-color: rgba(253, 253, 253, 0.7);" ">
      <h1 class=" display-4 fw-bold">
      <span style="color: #495057;">¡Bienvenido!</span>
      <span class="user-name text-black"> @userName</span>
      <span class="emoji" role="img" aria-label="feliz">😊</span>
      </h1>

      <p class="lead" style="font-size: 1.2rem;">Estás ingresando al panel de gestión de Inmobiliaria López. Aquí podrás
        gestionar todas las propiedades, inquilinos y clientes. ¡Esperamos que tengas un excelente día!</p>
    </div>
  </div>
</div>

<!-- Estilos -->
<style>
  .dynamic-width {
    width: auto;
    min-width: 300px;
    max-width: 90%;
  }

  .user-name {
    word-wrap: break-word;
    display: inline-block;
  }

  .emoji {
    font-size: 2rem;
    transition: transform 0.3s ease;
  }

  .emoji:hover {
    transform: scale(1.2);
  }

  .animate-message {
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 1s ease-out, transform 1s ease-out;
  }

  .animate-message.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<!-- Script para animación de entrada -->
<script>
  window.addEventListener('load', () => {
    document.querySelector('.animate-message').classList.add('visible');
  });
</script>
